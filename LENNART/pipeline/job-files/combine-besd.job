#!/usr/bin/env bash
#$ -cwd

set -exuo pipefail

source config.sh

cat ${CONFIG_JOBDIR}/make-besd.param | awk '$0=$4' > ${BUILD_DIR}/make-besd.flist
BUILD_DIR="${TMPDIR:-/tmp}/build_${RANDOM}"

SMR=$CONFIG_SMR

main() {
    $SMR --besd-flist ${BUILD_DIR}/make-besd.flist \
         --make-besd-dense \
         --out ${CONFIG_JOBDIR}/besd/combined
}

main
